<resources>

    <!-- if I don't put these values, preview failed -->
    <item name="visible" type="id" />
    <item name="masked" type="id" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <!-- Customize theme for Float hint TextInputlayout and underline -->
        <item name="android:colorControlActivated">#006db3</item>
        <item name="android:colorControlNormal">#2b2a2a</item>

        <!-- This hide the title of the app -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.Material.EditText">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextInputLayoutTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">#039be5</item>
        <item name="android:textColorHint">#2b2a2a</item>
    </style>

</resources>
